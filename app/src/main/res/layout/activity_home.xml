<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_txt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#030F56"
    android:fillViewport="true"
    tools:context=".view.Home">  <!-- Fixed context -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D3F5F8F8">

        <!-- Profile Icon at the Top Right -->

        <!-- Logo Image -->

        <!-- Welcome Text -->

        <!-- Banner Image -->

        <!-- Horizontal Scrollable Partner Logos -->

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="28dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="moveToSignIn"
            android:padding="2dp"
            android:contentDescription="profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/circular"
            app:srcCompat="@drawable/baseline_person_24"
            app:strokeColor="@color/white"
            app:strokeWidth="3dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="56dp"
            android:importantForAccessibility="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"
            android:fontFamily="cursive"
            android:text="Welcome!"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bannerImage"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_marginTop="40dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/banner_place"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:overScrollMode="never"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bannerImage">

        </HorizontalScrollView>


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="415dp"
            android:layout_height="106dp"
            android:layout_marginTop="20dp"
            android:isScrollContainer="true"
            android:orientation="horizontal"
            android:padding="7dp"
            app:layout_constraintTop_toBottomOf="@+id/bannerImage"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="2dp">

            <ImageView
                android:layout_width="92dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/director"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="123dp"
                android:layout_height="82dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/group"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="148dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/clg"
                tools:ignore="ContentDescription" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="417dp"
            android:layout_height="202dp"
            android:layout_marginTop="20dp"
            android:isScrollContainer="true"
            android:orientation="horizontal"
            android:padding="7dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:layout_width="112dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/lab"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="119dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/lib"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="123dp"
                android:layout_height="83dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/work"
                tools:ignore="ContentDescription" />


        </LinearLayout>


        <TextView
            android:id="@+id/textbanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="104dp"
            android:fontFamily="cursive"
            android:text="Guide in every step"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.336"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_main"
            android:layout_width="410dp"
            android:layout_height="41dp"
            android:background="#020D4D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
